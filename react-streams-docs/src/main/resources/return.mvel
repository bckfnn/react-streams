@code{
    tox = call.to.x + (call.to.x > call.from.x ? -1 : 1) } 
<line x1="@{call.from.x}" x2="@{tox}" y1="@{call.y}" y2="@{call.y}" stroke-width="1" stroke="#000000" stroke-dasharray="3,2"/>
<line x1="@{tox}" x2="@{tox + 5 * (tox > call.from.x ? -1 : 1)}" y1="@{call.y}" y2="@{call.y-5}" stroke-width="1" stroke="#000000"/>
<line x1="@{tox}" x2="@{tox + 5 * (tox > call.from.x ? -1 : 1)}" y1="@{call.y}" y2="@{call.y+5}" stroke-width="1" stroke="#000000"/>
