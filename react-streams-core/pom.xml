<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>com.github.bckfnn</groupId>
		<artifactId>react-streams</artifactId>
		<version>0.1</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>

	<groupId>com.github.bckfnn</groupId>
	<artifactId>react-streams-core</artifactId>
	<version>0.1</version>
	<packaging>jar</packaging>
	<name>react-streams-core</name>

	<description>
        An reactive-extension library for java inspired by the reactive-streams.org initiative
    </description>

	<developers>
		<developer>
			<id>fb</id>
			<name>Finn Bock</name>
			<email>bckfnn@gmail.com</email>
		</developer>
	</developers>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-surefire-plugin</artifactId>
				<version>2.12.4</version>
				<configuration>
					<includes>
						<include>**/test/*.java</include>
					</includes>
				</configuration>
			</plugin>

		</plugins>
	</build>

	<dependencies>
		<!-- testing -->
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>4.10</version>
			<scope>test</scope>
		</dependency>
	</dependencies>
</project>


